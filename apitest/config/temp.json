    "/1.0/respect/validate": {
      "post": {
        "summary": "发起夸夸前的预校验",
        "description": "客户端通过该接口校验用户是否可以发出夸夸（比如当日配额限制、拉黑关系等），同时获悉是否必填推荐语",
        "parameters": [
          {
            "name": "data",
            "description": "request body",
            "schema": {
              "type": "object",
              "properties": {
                "targetUser": {
                  "type": "string",
                  "required": true,
                  "description": "「夸夸」对象的用户 username",
                  "example": "「夸夸」对象的用户 username，例如：xxxx-xxxx-xxxx"
                }
              }
            },
            "in": "body"
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "example": true
                },
                "data": {
                  "type": "object",
                  "example": {
                    "contentRequired": true
                  }
                }
              }
            }
          }
        },
        "tags": [
          "夸夸相关"
        ],
        "security": [
          {
            "user": [
              
            ]
          }
        ]
      }
